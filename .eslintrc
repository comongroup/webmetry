{
	"env": {
		"browser": true,
		"node": true,
		"mocha": true
	},
	"extends": [
		"eslint:recommended"
	],
	"globals": {
		"expect": true
	},
	"parserOptions": {
		"ecmaVersion": 6,
		"parser": "babel-eslint"
	},
	"rules": {
		"brace-style": ["error", "stroustrup"],
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		"no-extra-semi": "error",
		"no-tabs": "off",
		"semi": ["error", "always"],
		"space-before-function-paren": ["error", "never"]
	}
}
